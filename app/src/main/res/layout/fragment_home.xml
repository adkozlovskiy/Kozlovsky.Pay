<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ft_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ft_toolbar"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:menu="@menu/home_menu"
            app:navigationIcon="@null"
            app:title="Главная"
            app:titleTextColor="@color/white_soft" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ft_iv_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:importantForAccessibility="no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ft_tv_name"
                style="@style/Headline1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Козловский Алексей"
                app:layout_constraintBottom_toTopOf="@id/ft_tv_account"
                app:layout_constraintStart_toEndOf="@id/ft_iv_avatar"
                app:layout_constraintTop_toTopOf="@id/ft_iv_avatar"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/ft_tv_account"
                style="@style/Callout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="120 129 012 003"
                android:textColor="@color/gray"
                app:layout_constraintBottom_toBottomOf="@id/ft_iv_avatar"
                app:layout_constraintStart_toStartOf="@id/ft_tv_name"
                app:layout_constraintTop_toBottomOf="@id/ft_tv_name" />

            <TextView
                android:id="@+id/ft_tv_take_transactions"
                style="@style/Headline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Запросить"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ft_iv_avatar" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ft_cv_qr"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/background_deep"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ft_tv_take_transactions">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:importantForAccessibility="no"
                    android:padding="8dp"
                    android:src="@drawable/ic_qr_code"
                    app:tint="@color/white_soft" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fh_cv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/background_deep"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toTopOf="@id/fh_tv_credentials"
                app:layout_constraintStart_toEndOf="@id/ft_cv_qr"
                app:layout_constraintTop_toTopOf="@id/ft_cv_qr">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:importantForAccessibility="no"
                    android:padding="8dp"
                    android:src="@drawable/ic_share"
                    app:tint="@color/white_soft" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/fh_tv_credentials"
                style="@style/Callout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Показать реквизиты"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/ft_cv_qr"
                app:layout_constraintStart_toEndOf="@id/ft_cv_qr"
                app:layout_constraintTop_toBottomOf="@id/fh_cv_share" />

            <TextView
                android:id="@+id/ft_tv_make_transactions"
                style="@style/Headline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Перевести"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ft_cv_qr" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ft_mcv_make_transactions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/background_deep"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toStartOf="@id/ft_mcv_qr_transaction"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ft_tv_make_transactions">

                <TextView
                    style="@style/Callout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="12dp"
                    android:background="@null"
                    android:text="По номеру телефона"
                    android:textColor="@color/gray" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ft_mcv_qr_transaction"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/background_deep"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@id/ft_mcv_make_transactions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ft_mcv_make_transactions"
                app:layout_constraintTop_toTopOf="@id/ft_mcv_make_transactions">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_scanner"
                    app:tint="@color/white_soft" />

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ft_rv_recent_recipients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/ft_mcv_make_transactions"
                tools:itemCount="12"
                tools:listitem="@layout/item_recent_recipient" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>