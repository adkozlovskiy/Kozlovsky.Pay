<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ft_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ft_toolbar"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:title="@string/make_transaction"
            app:titleTextColor="@color/white_soft" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/fpt_title"
        style="@style/Callout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/enter_account_number"
        android:textColor="@color/white_soft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ft_appbar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ft_mcv_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/background_deep"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/fpt_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ft_et_field"
            style="@style/Callout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/account_placeholder"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:textColor="@color/white_soft"
            android:textColorHint="@color/gray" />

    </com.google.android.material.card.MaterialCardView>

    <ru.kozlovsky.pay.presentation.view.PrimaryButton
        android:id="@+id/ft_btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:text="@string/btn_continue">

    </ru.kozlovsky.pay.presentation.view.PrimaryButton>
</androidx.constraintlayout.widget.ConstraintLayout>