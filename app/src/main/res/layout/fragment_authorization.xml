<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fr_tv_number"
        style="@style/Headline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="Номер телефона"
        app:layout_constraintBottom_toTopOf="@id/fr_tv_disclaimer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/fr_tv_disclaimer"
        style="@style/Callout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Введите номер телефона, чтобы \nсоздать аккаунт или войти"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@id/fr_mcv_number"
        app:layout_constraintTop_toBottomOf="@id/fr_tv_number" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fr_mcv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="48dp"
        app:cardBackgroundColor="@color/background_deep"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/ft_btn_continue"
        app:layout_constraintTop_toBottomOf="@id/fr_tv_disclaimer">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fr_et_number"
            style="@style/Callout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="+7"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:textColor="@color/white_soft"
            android:textColorHint="@color/gray" />

    </androidx.cardview.widget.CardView>

    <ru.kozlovsky.pay.presentation.view.PrimaryButton
        android:id="@+id/ft_btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:text="@string/btn_continue" />
</androidx.constraintlayout.widget.ConstraintLayout>